{% extends './base.html.twig' %}

{% block title %}
    <title>Articles</title>
{% endblock %}

{% block body %}
    {% for article in articles %}
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="post-preview">
                        <a href="/read/{{ article.slug }}">
                            <h2 class="post-title">
                                {{ article.titre }}
                            </h2>
                            <h3 class="post-subtitle">
                                {{ article.chapo }}
                            </h3>
                        </a>
                        <p class="post-meta">Post√© par
                            <a href="/contact">{{ article.auteur.pseudo }}</a>
                            le {{ article.date|date('d/m/Y') }}
                            </p>
                    </div>
                </div>
            </div>
        </div>
        <hr>
    {% endfor %}
{% endblock %}


